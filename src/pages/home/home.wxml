<view class="container" wx:if="{{ !isLoading }}">
    <!-- 搜索框 -->
    <searchBox wx:if="{{ search_box }}" total="{{ search_box.total }}"/>
    <view class="{{ search_box ? 'main': '' }}" >
        <view wx:for="{{ newData.modules }}" wx:for-item="module" wx:key="key" >
            <!-- 幻灯片 -->
            <slide wx:if="{{ module.type === 'slider' }}" module="{{ module }}" bindminiFail="miniFail" bindonModal="onModal"/>
            <!-- 简单文本 -->
            <text wx:if="{{ module.type === 'text' }}" module="{{ module }}" bindminiFail="miniFail" second="{{ second }}" size="{{ size }}" />
            <!-- 内容电商 -->
            <articleList wx:if="{{ module.type === 'article' }}" module="{{ module }}" bindminiFail="miniFail" themeColor="{{ themeColor }}"/>
        </view>
    </view>
</view>

