<view class="container" wx:if="{{ !isLoading }}">
    <!-- 搜索框 -->
    <searchBox wx:if="{{ search_box }}" total="{{ search_box.total }}"/>
    <view class="{{ search_box ? 'main': '' }}" >
        <view wx:for="{{ newData.modules }}" wx:key="key" >
            <!-- 幻灯片 -->
            <slide wx:if="{{ item.type === 'slider' }}" module="{{ item }}" bindminiFail="miniFail" bindonModal="onModal"/>
            <!-- 简单文本 -->
            <text wx:if="{{ item.type === 'text' }}" module="{{ item }}" second="{{ second }}" size="{{ size }}" />
            <!-- 文本列表 -->
            <textList wx:if="{{ item.type === 'text-list' }}" module="{{ item }}"/>
            <!-- 优惠券 -->
            <coupons wx:if="{{ item.type === 'coupon' }}" coupon="{{ item }}" config="{{ config }}" globalData="{{ globalData }}" bindonsubmitFormId="submitFormId" />
            <!-- 快捷导航栏 -->
            <nav wx:if="{{ item.type === 'nav' }}" module="{{ item }}" config="{{ config }}" bindonModal="onModal"/>
            <!-- 内容电商 -->
            <articleList wx:if="{{ item.type === 'article' }}" module="{{ item }}" themeColor="{{ themeColor }}" />
            <!-- 商品列表 -->
            <productsList wx:if="{{ item.type === 'product'}}" module="{{ item }}" themeColor="{{ themeColor }}" globalData="{{ globalData }}" />
        </view>
    </view>
</view>

<!-- 服务 -->
<service phone="{{ newData.module_page && newData.module_page.phone_number }}" customer="{{  newData.module_page && newData.module_page.customer }}" sessionFrom='{"nickName":"{{ userInfo.nickname }}", "avatarUrl":"{{ userInfo.avatarurl }}", "from":"home"}' />

<!-- 添加到我的小程序 -->
