<navigator class="bigPic" url="{{ '/pages/productDetail/productDetail?id=' + product.id }}">
    <view class="wrap">
        <view class="mask" wx:if="{{ product.status === 'sold_out' }}">已售罄</view>
        <image class="productImage" src="{{ product.thumbnail }}" mode="aspectFill"/>
    </view>
    <view class="meta">
        <view class="name">{{ product.title }}</view>
        <view class="desc" wx:if="{{ product.excerpt }}">{{ product.excerpt }}</view>
        <view class="timeLimit">
            <view class="limitWrapper">
                <view wx:if="{{ hasStart && !hasEnd }}">距结束</view>
                <view wx:if="{{ !hasStart }}">距开始</view>
                <view wx:if="{{ hasEnd }}">已结束</view>
            </view>
            <block wx:if="{{ !hasEnd && remainTime.day > 0 }}">
                <view class="day">{{ remainTime.day }}</view>
                <view class="dateTitle">天</view>
            </block>
            <view class="hour" wx:if="{{ !hasEnd }}">
                {{ remainTime.hour }}
            </view>
            <view class="dateTitle" wx:if="{{ !hasEnd }}">时</view>
            <view class="minute" wx:if="{{ !hasEnd }}">
                {{ remainTime.minute }}
            </view>
            <view class="dateTitle" wx:if="{{ !hasEnd }}">分</view>
            <view class="second" wx:if="{{ !hasEnd }}">
                {{ remainTime.second }}
            </view>
            <view class="dateTitle" wx:if="{{ !hasEnd }}">秒</view>
        </view>
        <view class="footer">
            <view class="allPrice">
                <view class="originalPrice">
                    价值{{ globalData.CURRENCY[globalData.currency] }}{{  luckydraw.activity.price }}
                </view>
                <view class="miaoshaPrice">
                    {{ globalData.CURRENCY[globalData.currency] }}{{  product.price }}
                </view>
            </view>

        </view>
    </view>
</navigator>