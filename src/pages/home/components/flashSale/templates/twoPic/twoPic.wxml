<navigator class="twoPic" url="{{ '/pages/productDetail/productDetail?id=' + product.id }}">
	<view class="wrapper">
		<view class="mask" wx:if="{{ product.status === 'sold_out' }}">已售罄</view>
		<image src="{{ product.thumbnail }}" class="ItemImage" mode="aspectFill" />
	</view>
	<view class="Info">
		<view class="title">{{ product.title }}</view>
		<view class="meta">
			<view class="priceWrapper">
				<view class="ItemPrice">
					{{ globalData.CURRENCY[globalData.currency] }}{{ product.miaosha_price || product.seckill_price }}
				</view>
				<!-- 原价 针对三图隐藏-->
				<view class="originPrice {{config && config.cart_enable ? 'hidden' : ''}}"><text>{{ globalData.CURRENCY[globalData.currency] }}</text>{{ product.original_price }}
				</view>
			</view>
			<!-- 限时购标签 -->
			<view class="tagWrapper" wx:if="{{ product.seckill_enable && !(config && config.cart_enable) }}">秒杀</view>
			<view class="tagWrapper" wx:if="{{ product.miaosha_enable && !(config && config.cart_enable)}}">限时购</view>
			<view class="{{config && config.cart_enable ? 'show' : 'tagWrapper'}}" wx:if="{{ config && config.cart_enable }}">
				<view class="cart" style="background-color: {{ themeColor.primaryColor }}" catch:tap="singleAddCart" data-id="{{ product.id }}" data-stock="{{ product.stock }}" data-product="{{ product }}">
					<image class="icon" src="/icons/cart.svg" />
				</view>
			</view>
		</view>
	</view>
</navigator>