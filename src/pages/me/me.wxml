<!-- <loading isLoading="{{ isLoading }}"/> -->
<view class="container">
	<!-- 头部面板 -->
	<personal-more wx:if="{{ PLATFFORM_ENV === 'CUILV' }}" personalComponentData="{{ personalComponentData }}" themeColor="{{ themeColor }}" config="{{ config }}" bind:consoleOpen="consoleOpen" bind:changeWalletData="changeWalletData" />
	<personal wx:else personalComponentData="{{ personalComponentData }}" themeColor="{{ themeColor }}" config="{{ config }}" bind:consoleOpen="consoleOpen" bind:changeWalletData="changeWalletData" />

	<!-- 订单面板 -->
	<orders ordersComponentData="{{ ordersComponentData }}" />

	<!-- 会员专区 -->
	<button class="member-btn" open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo" wx:if="{{ config.membership_enable && membership_banner }}">
		<image class="member-image" src="{{ membership_banner }}"/>
	</button>

	<!-- 功能面板 -->
	<infos infosComponentData="{{ infosComponentData }}" />

	<navigator
		class="affiliate"
		url="/pages/affiliate/affiliateApply/affiliateApply"
		wx:if="{{ ((config.affiliate_enable && !affiliate.is_affiliate_member) || (config.affiliate_enable && affiliate.member && affiliate.member.audit_status === '3')) && config.affiliate_public }}">
		<image class="itemIcon" mode="widthFix" src="../../icons/affiliate.png" />
		<view class="itemTitle">{{ config.affiliate_name }} >></view>
	</navigator>

</view>
<view class="peanut-logo logo">
	<logo logoObj="{{ logoObj }}" />
</view>

<manager managerComponentData="{{ managerComponentData }}" openManager="{{ openManager }}" manager="{{ dedicated_manager }}" no_dedicated_manager_text="{{ no_dedicated_manager_text }}" themeColor="{{ themeColor }}"/>

<myModal modal="{{infoModal}}" bindonConfirm="onInfoConfirm" />