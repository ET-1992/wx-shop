<view class="orderCreateWrap {{ !crowd && isIphoneX ? 'iphoneXTrick' : ''}}" style="{{ crowd ? 'padding:0' : '' }} ">
  <view wx:if="{{ payment_tips }}" class="payment_tips">{{ payment_tips }}</view>
  <!-- 配送方式 -->
  <block wx:if="{{ product_type !== 1 }}">
    <view class="express" wx:if="{{ selfLiftEnable && !self_lifting_only }}" >
        <text class="item-text">配送方式</text>
        <radio-group class="radio-group" bindchange="radioChange">
            <label wx:for="{{ liftStyles }}" wx:key="{{index}}">
                <radio value="{{item.value}}" checked="{{item.checked}}" style="border-color:{{ themeColor.primaryColor }}" color="{{ themeColor.primaryColor }}" />
                <text class="title">{{ item.title }}</text>
            </label>
        </radio-group>
    </view>
    <!-- 自提 -->
    <liftInfoTwo liftInfo="{{ liftInfo }}" homeDeliveryEnable="{{ home_delivery_enable }}" wx:if="{{ liftStyle == 'lift' && self_lifting_enable }}" bindupdateLiftInfo="updateLiftInfo"/>
    <!-- <liftInfo liftInfo="{{ liftInfo }}" wx:if="{{ liftStyle == 'lift' && selfLiftEnable }}" bindupdateLiftInfo="updateLiftInfo"/> -->

    <!-- 快递 -->
    <addressTwo address="{{ address }}" defineTypeGlobal="{{ defineTypeGlobal }}" bindtap="onAddress" class="addressWrapper" wx:if="{{ liftStyle == 'express' && logistics_enable }}" />
    <!-- <address address="{{ address }}" defineTypeGlobal="{{ defineTypeGlobal }}" bindtap="onAddress" class="addressWrapper" wx:if="{{ liftStyle == 'express' || !selfLiftEnable }}" /> -->

    <!-- 送货上门 -->
    <delivery address="{{ address }}" wx:if="{{ liftStyle == 'delivery' && home_delivery_enable }}" homeDeliveryTimes="{{ homeDeliveryTimes }}" bindonAddress="onAddress" id="delivery" />
  </block>

  <!-- 门店列表 -->
  <storeList addresses="{{ storeListAddress }}" isOrder="{{ isOrder }}" wx:if="{{ liftStyle == 'delivery' }}" id="storeList"></storeList>

  <!-- 商品信息 -->
  <productItemSold items="{{ items }}" class="productItemSoldWrapper" />

  <view class="textareaWrapper" wx:if="{{ !order_annotation }}">
    <textarea wx:if="{{!authModal.isShowModal && !modal.isShowModal}}" class="textarea" maxlength="{{ 30 }}" bindinput="onInput" placeholder="买家留言" placeholder-class="textarea-placeholder" />
  </view>

  <!-- 订单留言 -->
  <orderForm annotation="{{ order_annotation }}" wx:if="{{ order_annotation && order_annotation.length > 0 }}" id="orderForm" isShowModal="{{ modal.isShowModal }}" />

  <!-- 优惠券 -->
  <orderCoupon shouldGoinDisplay="{{ shouldGoinDisplay }}" maxUseCoin="{{ maxUseCoin }}" coins="{{ wallet.coins }}" useCoin="{{ useCoin }}" fee="{{ fee }}" isGrouponBuy="{{ isGrouponBuy }}" isHaveUseCoupon="{{ isHaveUseCoupon }}" config="{{ config }}" bindsetusecoin="setUseCoin" bindgetcouponid="getCouponId"></orderCoupon>

  <view class="pickPayStyle" wx:if="{{ store_card && store_card.store_card_enable && !crowd && !isGrouponBuy }}">
      <view class="title">支付方式</view>
      <view class="radio-group">
        <view class="radio" wx:for="{{ PAY_STYLES }}" bind:tap="pickPayStyle" data-value="{{item.value}}">
          <text class="text">{{item.text}}</text>
          <text class="circle {{ selectedPayValue === item.value ? 'checked' : ''}}"></text>
        </view>
      </view>
  </view>

    <view class="pickPayStyle" wx:if="{{ store_card && store_card.store_card_enable && !crowd && !isGrouponBuy }}">
      <view class="title">您当前的储值卡余额为：{{ store_card.balance }}元</view>
  </view>

  <!-- 订单金额具体信息 -->
  <orderInfo defineTypeGlobal="{{ defineTypeGlobal }}" fee="{{ fee }}" useCoin="{{ useCoin }}" shouldGoinDisplay="{{ shouldGoinDisplay }}" isGrouponBuy="{{ isGrouponBuy }}" totalPostage="{{ totalPostage }}" isGrouponCommanderPrice="{{ groupon_commander_price }}" config="{{ config }}"></orderInfo>
</view>

<!-- 底部支付按钮 -->
<orderPay finalPay="{{ finalPay }}" isIphoneX="{{ isIphoneX }}" isPeanutPay="{{ isPeanutPay }}" isDisablePay="{{ isDisablePay }}" bindonpay="onPay" crowd="{{ crowd }}" themeColor="{{ themeColor }}"></orderPay>

<myModal modal="{{modal}}" bindonCancel="onCancel" bindonConfirm="onConfirm"></myModal>

<console page="创建订单" />
<myModal modal="{{authModal}}" bindonCancel="onAddressCancel" bindonConfirm="onAddressConfirm"></myModal>
