<view class="orderCreateWrap">
  <view class="express">
      <text class="item-text">配送方式</text>
      <radio-group class="radio-group" bindchange="radioChange">
          <label wx:for="{{ liftStyles }}" wx:key="{{index}}">
              <radio value="{{item.value}}" checked="{{item.checked}}" style="border-color:{{ themeColor.primaryColor }}" color="{{ themeColor.primaryColor }}" />
              <text class="title">{{ item.title }}</text>
          </label>
      </radio-group>
  </view>
  <liftInfo liftInfo="{{ order }}" wx:if="{{ liftStyle == 'lift' }}"/>
  <address address="{{ address }}" bindtap="onAddress" class="addressWrapper" wx:if="{{ liftStyle == 'express' }}" />
  <productItemSold items="{{ items }}" class="productItemSoldWrapper" />
  <view class="textareaWrapper">
    <textarea wx:if="{{!authModal.isShowModal && !modal.isShowModal}}" class="textarea" maxlength="{{ 30 }}" bindinput="onInput" placeholder="买家留言" placeholder-class="textarea-placeholder" />
  </view>
  <orderCoupon shouldGoinDisplay="{{ shouldGoinDisplay }}" maxUseCoin="{{ maxUseCoin }}" coins="{{ wallet.coins }}" useCoin="{{ useCoin }}" fee="{{ fee }}" isGrouponBuy="{{ isGrouponBuy }}" isHaveUseCoupon="{{ isHaveUseCoupon }}" bindsetusecoin="setUseCoin" bindgetcouponid="getCouponId"></orderCoupon>
  <orderInfo fee="{{ fee }}" totalPrice="{{ totalPrice }}" useCoin="{{ useCoin }}" shouldGoinDisplay="{{ shouldGoinDisplay }}" isGrouponBuy="{{ isGrouponBuy }}" totalPostage="{{ totalPostage }}"></orderInfo>
</view>
<orderPay finalPay="{{ finalPay }}" isIphoneX="{{ isIphoneX }}" isPeanutPay="{{ isPeanutPay }}" isDisablePay="{{ isDisablePay }}" bindonpay="onPay"></orderPay>

<myModal modal="{{modal}}" bindonCancel="onCancel" bindonConfirm="onConfirm"></myModal>

<console page="创建订单" />
<myModal modal="{{authModal}}" bindonCancel="onAddressCancel" bindonConfirm="onAddressConfirm"></myModal>
