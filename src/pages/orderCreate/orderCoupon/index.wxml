 <view class="orderCoupon" wx:if="{{!isGrouponBuy}}">
        <view class="coupon">
            <view class="coupon-title">优惠劵</view>
            <view class="coupon-content">优惠 {{ fee.coupon_reduce_fee }}元 <text class="coupon-rec">已选推荐优惠劵</text> <text class="coupon-change" bindtap="couponChange">修改</text></view>
        </view>
        <view class="gold"  wx:if="{{ shouldGoinDisplay }}">
            <view class="gold-title">金币 （本单最多可使用 {{ maxUseCoin }} 个）</view>
            <view class="gold-content">共 {{ coins }} 金币,使用 <input type="number" bindinput="bindInput" style="width: 70rpx;text-align: center" value="{{ useCoin }}" />个</view>
        </view>
</view>