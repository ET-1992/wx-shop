<form report-submit bindsubmit="onPay">
    <view class="orderPay {{crowd ? 'orderPay-crowd' : ''}} {{ !crowd && isIphoneX ? 'iphoneX-style' : '' }}">
        <text class="pay-text">实付款：<text> {{ globalData.CURRENCY[globalData.currency] }}{{ finalPay }} </text></text>
        <button wx:if="{{ !crowd }}" class="pay-button" form-type="submit" disabled="{{ isDisablePay }}">{{ isPeanutPay ? '提交订单' : '去支付' }}</button>
        <!-- <button wx:if="{{ crowd }}" class="pay-button" form-type="submit" disabled="{{ isDisablePay }}">请好友代付</button> -->
    </view>
    <view wx:if="{{ crowd }}" class="crowBtn {{ isIphoneX ? 'iphoneX-style' : '' }}">
        <button class="pay-button crowd-pay" form-type="submit" data-crowdType="{{2}}" style="background:{{ isDisablePay ? '#F7F7F7' : themeColor.primaryColor }}" disabled="{{ isDisablePay }}">请好友代付</button>
        <button class="pay-button crowd-pay" form-type="submit" data-crowdType="{{1}}" style="background:{{ isDisablePay ? '#F7F7F7' : themeColor.primaryColor }}" disabled="{{ isDisablePay }}">找好友众筹</button>
    </view>
</form>