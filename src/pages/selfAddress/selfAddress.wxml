<view class="container">
    <van-cell-group>
  <van-field
    value="{{ selfAddressObj.userName }}"
    required
    clearable
    label="姓名"
    placeholder="请输入您的姓名"
    border="{{ true }}"
    bind:change="check"
    data-key="userName"
    error="{{ error.userName }}"
  />

  <van-field
    value="{{ selfAddressObj.telNumber }}"
    required
    clearable
    label="手机号"
    placeholder="请输入您的手机号"
    border="{{ true }}"
    bind:change="check"
    data-key="telNumber"
    error="{{ error.telNumber }}"
  />

  <van-field
    value="{{ selfAddressObj.detailInfo }}"
    required
    label="详细地址"
    type="textarea"
    placeholder="请输入您的详细地址"
    autosize
    data-key="detailInfo"
    border="{{ true }}"
    bind:change="check"
    error="{{ error.detailInfo }}"
  />
</van-cell-group>

<view class="btnWrap" bindtap="saveSelfAddress">确定地址</view>
</view>
