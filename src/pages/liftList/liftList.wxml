<view class="container">
	<radio-group class="item" wx:for="{{ address_list }}" bindchange="getLiftInfo">
		<radio value="{{index}}" checked="{{item.checked}}" color="{{ themeColor.primaryColor }}" class="itemRadio" />

		<view class="liftInfo">
			<view class="liftInfoTop">
				{{ item.name }}
			</view>
			<view class="liftInfoCenter">
				<image src="/icons/address.png"	mode="widthFix" class="icon" />
				<view class="text">{{ item.state + item.city + item.district + item.address }}</view>
			</view>
			<view class="liftInfoBottom" wx:if="{{ item.phone }}">
				<image src="/icons/phone.png" mode="widthFix" class="icon" />
				<view class="text">{{ item.phone }}</view>
			</view>
		</view>

		<view class="liftRight">{{ item.distance }}km</view>
	</radio-group>
</view>

<myModal modal="{{authModal}}" />
<console />