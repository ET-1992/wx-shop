<view class="container">
	<view class="header">
		<!-- 图片 -->
		<view class="header-img"></view>
		<!-- 促销banner -->
		<view class="header-img-banner row" wx:if="{{ hasBanner }}">
			<view class="left">
				<view class="banner-title"></view>
				<view class="banner-price"></view>
			</view>
			<view class="right">
				<view class="banner-meta"></view>
			</view>
		</view>
		<view class="header-info">
			<view class="info-title">
				<view class="left">
					<!-- 标题 -->
					<view class="title row"></view>
					<!-- 副标题 -->
					<view class="desc row"></view>
				</view>
				<view class="right">
					<!-- 按钮 -->
					<view class="btn row"></view>
					<view class="btn row"></view>
				</view>
			</view>
			<!-- 价格 -->
			<view class="info-price row"></view>
			<!-- 快递、已售 -->
			<view class="info-meta">
				<view class="left row"></view>
				<view class="right row"></view>
			</view>
		</view>
	</view>
	<view class="body">
		<!-- 优惠券 -->
		<view class="body-coupon row">
		</view>
		<!-- 商品详情 -->
		<view class="body-product-detail">
			<view class="detail-title row"></view>
			<view class="detail-content row"></view>
		</view>
	</view>
	<view class="foot">
		<view class="left">
			<view class="btn row" wx:for="aaa" wx:key="index"></view>
		</view>
		<view class="right">
			<view class="btn row"></view>
			<view class="btn row"></view>
		</view>
	</view>
</view>
