<view class="container top">
    <view class="item">
        <text class="item-text">可提现金额</text>
        <text class="amount">￥38788877</text>
    </view>
    <view class="item">
        <text class="item-text">未结算收益</text>
        <text class="amount">￥38</text>
    </view>

</view>
<view class="container middle">
    <view class="item">
        <text class="item-text">本次提现</text>
        <text class="price">￥</text>
        <input class="input" type="number"/>
    </view>
</view>
<view class="container">
    <view class="item">
        <text class="item-text">提现方式</text>
        <radio-group class="radio-group" bindchange="radioChange">
            <label wx:for="{{ payStyles }}">
                <radio value="{{item.value}}" checked="{{item.checked}}" color="{{ themeColor.primaryColor }}" />
                <text class="payName">{{ item.name }}</text>
            </label>
        </radio-group>
    </view>
    <view wx:if="{{ payStyle == 1 }}">
        <view 
            class="item"
            style="border-bottom: 1rpx solid rgba(201, 201, 201, 0.6);"
        >
            <text class="item-text">手机号</text>
            <input 
                class="item-input" 
                placeholder="请输入手机号" 
                type="number" 
                bindblur="check" 
                style="color: {{ isError.phone ? '#FF0000' : '#000000' }}"
                bindfocus="reset"
            />
        </view>
        <view class="item">
            <text class="item-text">微信号</text>
            <input 
                class="item-input" 
                placeholder="请输入微信号" 
                type="text" />
        </view>
    </view>
    <view wx:else>
        <view 
            class="item"
            style="border-bottom: 1rpx solid rgba(201, 201, 201, 0.6);"
        >
            <text class="item-text">姓名</text>
            <input class="item-input" placeholder="请输入姓名" bindinput='getUserIdCardName' type="text"/>
        </view>
        <view 
            class="item"
            style="border-bottom: 1rpx solid rgba(201, 201, 201, 0.6);"
        >
            <text class="item-text">手机号</text>
            <input 
                class="item-input" 
                placeholder="请输入手机号"
                type="number" 
                bindblur="check" 
                style="color: {{ isError.phone ? '#FF0000' : '#000000' }}"
                bindfocus="reset"
                bindinput='getUserIdCardPhoneNumber'
            />
        </view>
        <view 
            class="item"
            style="border-bottom: 1rpx solid rgba(201, 201, 201, 0.6);"
        >
            <text class="item-text">银行卡号</text>
            <input 
                class="item-input" 
                placeholder="请输入银行卡号"
                bindinput='getUserIdCardNumber'
                type="number" />
        </view>
        <view class="item">	
            <text class="item-text">开户行</text>
            <input 
                class="item-input" 
                placeholder="请选择开户行"
                bindblur='getUserIdCardBankType'
                value='{{ bankName }}'
                type="text" /> 
        </view>
    </view>
</view>

<view class="saveBtnWrap">
	<view class="saveBtn" bindtap='submitInfos'>申请提现</view>
</view>