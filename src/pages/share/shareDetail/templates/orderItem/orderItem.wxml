<template name="orderShareItem">
    <view class="orderShareItem">
        <image class="itemLeft"></image>
        <view class="itemCenter">
            <view class="itemCenter-t">品名：{{ order.order_title }}</view>
            <view class="itemCenter-t">所属订单号：{{ order.order_no }}</view>
            <view class="itemCenter-t">确认时间：{{ formatTime }}</view>
            <text class="itemCenter-t" decode="{{ true }}">支付金额：￥{{ order.order_amount }} &nbsp; &nbsp; 佣金比例：{{ order.commission_amount }}%</text>
        </view>
        <view class="itemRight">+￥{{ amount / 100 }}</view>
    </view>
</template>