<loading isLoading="{{ isLoading }}"/>

<view class="container" wx:if="{{ !isLoading }}" >
	<view class="shareMoneyDisplay">
		<text class="shareMoneyDisplay-h">累计收益（元）</text>
		<text class="shareMoneyDisplay-b"><text class="shareMoneyDisplay-b-m">￥</text>{{ (wallet.income + wallet.income_pending)|| 0 }}</text>
		<text class="shareMoneyDisplay-f">包含待结算收益￥{{ wallet.income_pending || 0 }}</text>
		<view class="shareMoneyDisplay-s" bindtap="changeModal">规则说明</view>
	</view>
	<view class="shareMoneyGet">
		<text class="shareMoneyGet-text">可提现金额 <text class="shareMoneyGet-money">￥{{ wallet.balance || 0 }}</text> </text>
		<view class="shareMoneyGet-btn" bindtap="goToShare" data-urldata="shareMoney">立即提现</view>
	</view>
	<view class="finishUserInfo" bindtap="goToShare" data-urldata="shareDetail">
		<view class="finishUserInfo-left">收入明细</view>
		<image class="finishUserInfo-right" src="/icons/right.png"></image>
	</view>
	<!-- <view class="finishUserInfo" bindtap="goToShare" data-urldata="shareFinishUserInfo">
		<text class="finishUserInfo-left">完善个人资料</text>
		<image class="finishUserInfo-right" src="/icons/right.png"></image>
	</view> -->
	<view class="userInfoDisplay">
		<navigator class="userInfoDisplay-item" url="/pages/share/shareList/shareList?user_type=2">
			<text class="userInfoDisplay-num">{{ member.customer_count || 0 }}</text>	
			<text class="userInfoDisplay-text">客户</text>	
		</navigator>

		<navigator class="userInfoDisplay-item" url="/pages/share/shareList/shareList?user_type=1">
			<text class="userInfoDisplay-num">{{ member.sub_member_count || 0 }}</text>	
			<text class="userInfoDisplay-text">分享家</text>	
		</navigator>

		<navigator class="userInfoDisplay-item" url="/pages/share/shareOrderList/shareOrderList">
			<text class="userInfoDisplay-num">{{ member.order_count || 0 }}</text>	
			<text class="userInfoDisplay-text">订单</text>	
		</navigator>
	</view>
	<view class="footer" wx:if="{{ affiliate_enable }}">
		<view class="footer-item" bindtap="goToShare" data-urldata="shareProductList">
			<image class="footer-img" src="/icons/shareProduct.png"></image>	
			<text class="footer-text">分享商品</text>	
		</view>

		<view class="footer-item" bindtap="goToShare" data-urldata="sharePoster" data-postertype="2">
			<image class="footer-img" src="/icons/sharePoster.png"></image>	
			<text class="footer-text">推广海报</text>	
		</view>

		<view class="footer-item" bindtap="goToShare" data-urldata="sharePoster" data-postertype="1">
			<image class="footer-img" src="/icons/shareToFriend.png"></image>	
			<text class="footer-text">邀请好友</text>	
		</view>
	</view>
	<view class="closeFooter" wx:if="{{ !affiliate_enable }}">商家分享功能已下线</view>

</view>
<view class="modal" style="display: {{ isShowModal ? 'flex' : 'none' }}"> 
	<view class="content">
		<view class="content-header">分享规则说明</view>
		<view class="content-body">
			<view class="content-body-item"><text class="content-body-item-left">分享家</text><text>通过邀请海报绑定关系的下线</text></view>
			<view class="content-body-item"><text class="content-body-item-left">客户</text><text>通过分享海报或链接购买商品的买家</text></view>
			<view class="content-body-item"><text class="content-body-item-left">订单</text><text>客户和分享家的客户的购买订单</text></view>
			<view class="content-body-item"><text class="content-body-item-left">预计收益</text><text>处于进行中的订单收益</text></view>
			<view class="content-body-item"><text class="content-body-item-left">收益</text><text>完成后7日后且无退款的订单收益</text></view>
		</view>
		<view class="content-footer" bindtap="changeModal">知道了</view>
	</view>
</view>

<console page="分销中心" />