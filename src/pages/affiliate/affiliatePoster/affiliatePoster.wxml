<view class="container">
	<canvas  canvas-id="canvasPoster" class="canvasWrap" id="canvasPosterId" style="display: {{ hiddenCanvas ? 'none' : 'block' }}"/>
	<view class="canvasWrap" wx:if="{{ hiddenCanvas }}"></view>

	<view class="btnWtap">
		<button class="btn" open-type="share" style="background-color: {{ themeColor.primaryColor }}">分享给好友</button>
		<button class="btn" bindtap="saveCanvasToImg" style="background-color: {{ themeColor.primaryColor }}">{{ qrcode.save_button_title ? qrcode.save_button_title : '保存图片到手机' }}</button>
	</view>
</view>

<myModal modal="{{authModal}}" bindonCancel="onModalCancel" bindonConfirm="onModalConfirm" bindonSaveUserInfo="onSaveUserInfo" />