<loading isLoading="{{ isLoading }}" />
<filterList class="filterList" filterListData="{{ filterListData }}" bindchangeFilterList="changeFilterList"/>
<view wx:if="{{ !isLoading && products.length }}" class="shareProductListWrap">
  <navigator 
    hover-class="navigator-hover" 
    url="/pages/productDetail/productDetail?id={{ product.id }}"
    wx:for="{{ products }}"
    wx:key="id"
    wx:for-item="product"
    wx:for-index="productIndex"
  >
    <productList product="{{ product }}" tplStyle="default" productLayoutStyle="shareProduct" />
  </navigator>
</view>
<view class="emptyHint" wx:if="{{ !products.length && !isLoading }}" >暂无分享商品</view>

<console page="分销商品" />