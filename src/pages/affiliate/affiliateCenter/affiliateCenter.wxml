			<image class="userAvatar" mode="aspectFit" src="{{ user.avatarurl ? user.avatarurl : '/icons/unlogin.png' }}"></image>
		</view>
		<view class="userBody">
			<view class="userData">
				<text class="userName">Den丨李大恩</text>
				<image class="editIcon" mode="aspectFit" src="/icons/affiliateCenter/edit.svg"></image>
			</view>
			<view class="recommend">
				<text class="recommendKey">推荐人</text>
				<view class="recommendValue">
					<image class="recommendAvatar" mode="aspectFit" src="{{ user.avatarurl ? user.avatarurl : '/icons/unlogin.png' }}"></image>
					<text class="recommendName">牛逼闪闪的denis</text>
				</view>
			</view>
		</view>
	</view>
