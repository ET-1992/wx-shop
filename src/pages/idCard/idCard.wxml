<view class="container">
	<form bindsubmit="formSubmit" class="form">
        <view class="form-section">
            <view class="form-left first-child">真实姓名</view>
            <input class="form-right" type="text" value="{{userName? userName : ''}}" bindinput="bindNameInput" placeholder="请输入您本人的真实姓名"  placeholder-class="weui_placeholder"/>
        </view>
        <view class="form-section">
            <view class="form-left">身份证号</view>
            <input class="form-right" type="idcard" value="{{idNumber? idNumber : ''}}" bindinput="bindNumberInput" maxlength="18" placeholder="请输入您本人的身份证号" placeholder-class="weui_placeholder"/>
        </view>
