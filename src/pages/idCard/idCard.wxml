            <view class="form-left">{{item.info}}</view>
			<view class="form-img" >
				<image class="form-img"  src="{{item.imgSrc ? item.imgSrc: "/icons/uploadIcon.svg"}}" bindtap="onUpload" data-index="{{index}}"/>
			</view>
        </view> -->
        <view class="form-section">
            <view class="form-left">身份证正面</view>
			<view class="form-img">
				<image class="form-img" src="{{idCardImage1 ? idCardImage1: '/icons/uploadIcon.svg'}}" bindtap="onUploadIDCard"/>
			</view>
        </view>
        <view class="form-section">
            <view class="form-left">身份证反面</view>
			<view class="form-img" >
				<image class="form-img"  src="{{idCardImage2 ? idCardImage2: '/icons/uploadIcon.svg'}}" bindtap="onUploadReverseSideOfIDCard"/>
			</view>
        </view>
		<button form-type="submit" class="form-btn" style="background-color: {{ themeColor.primaryColor }}">保 存</button>
    </form>
</view>
