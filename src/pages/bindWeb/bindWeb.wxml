<view class="container">
    <view class="main">
        <view class="shop-info" wx:if="{{ config.authorizer }}">
            <image class="shop-info-img" src="{{ config.authorizer.head_img }}" />
            <view class="shop-info-name"> {{ config.authorizer.nick_name }}</view>
        </view>
        <view class="title">请先绑定手机号</view>
        <van-button custom-class="btn" open-type="{{ checked ? 'getPhoneNumber' : ''}}" bind:click="{{ !checked ? 'getPhoneNumber' : ''}}" bind:getphonenumber="getPhoneNumber" color="{{ themeColor.primaryColor }}">微信授权绑定</van-button>
        <van-button custom-class="btn" custom-style="color: #707070" color="#f4f4f4" bind:click="back">返回</van-button>
        <view class="checkbox_item">
            <van-checkbox value="{{ checked }}" icon-size="18px" bind:change="onChange"></van-checkbox>
            <view class="checkbox_text">
                阅读并同意<text class="rule" bindtap="go" data-url="/pages/rulePages/rulePages?key=affiliate_contract">《用户服务协议》</text><text class="rule" bindtap="go" data-url="/pages/rulePages/rulePages?key=privacy_policy">《隐私政策》</text>
            </view>
        </view>
    </view>
    <view class="logo {{ isIphoneX ? 'iphoneX' : '' }}">
        <logo logoObj="{{ config.partner }}" />
    </view>
</view>
