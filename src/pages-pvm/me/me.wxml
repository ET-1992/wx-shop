<view class="my">
  <view class="my-header">
    <view class="my-msg" bind:tap="goPersonal">
      <image class="img" src="{{ user.avatarurl  || '../../icons/mvp/default.png' }}" />
      <text class="name">{{ user.nickname || "点击登录" }}</text>
    </view>
    <view class="signBtn" bind:tap="goSign">
      <van-icon class="bell" name="bell" />
      <view class="text">签到有礼</view>
      <view></view>
    </view>
    <!-- <van-icon name="arrow" /> -->
  </view>
  <view class="my-order">
    <!-- <view class="order">我的订单</view> -->
    <van-grid custom-class="my-grid" column-num="5" border="{{false}}">
      <navigator class="orderItem" url="/pages-pvm/orderList/orderList?status=1000">
        <van-grid-item use-slot class="order-gird">
          <image class="img" src="../../icons/mvp/unpaid.png" />
          <text class="title">待付款</text>
        </van-grid-item>
      </navigator>
      <navigator class="orderItem" url="/pages-pvm/orderList/orderList?status=2000">
        <van-grid-item use-slot class="order-gird">
          <image class="img" src="../../icons/mvp/notShipped.png" />
          <text class="title">待发货</text>
        </van-grid-item>
      </navigator>
      <navigator class="orderItem" url="/pages-pvm/orderList/orderList?status=3000">
        <van-grid-item use-slot class="order-gird">
          <image class="img" src="../../icons/mvp/shipped.png" />
          <text class="title">待收货</text>
        </van-grid-item>
      </navigator>
      <navigator class="orderItem" url="/pages-pvm/orderList/orderList?status=5000">
        <van-grid-item use-slot class="order-gird">
          <image class="img" src="../../icons/mvp/shipped.png" />
          <text class="title">退款中</text>
        </van-grid-item>
      </navigator>
      <navigator class="orderItem" url="/pages-pvm/orderList/orderList">
        <van-grid-item use-slot text="全部订单" dot class="order-gird">
          <image class="img" src="../../icons/mvp/allOrder.png" />
          <text class="title">全部订单</text>
        </van-grid-item>
      </navigator>
    </van-grid>
  </view>
  <view class="my-order">
    <van-grid custom-class="my-grid" column-num="4" border="{{false}}">
      <van-grid-item class="data-grid" use-slot dot>
        <text class="title">优惠券</text>
        <text class="value">3</text>
      </van-grid-item>
      <van-grid-item class="data-grid" use-slot dot>
        <text class="title">积分</text>
        <text class="value">3</text>
      </van-grid-item>
      <van-grid-item class="data-grid" use-slot dot>
        <text class="title">小区人数</text>
        <text class="value">3</text>
      </van-grid-item>
      <van-grid-item class="data-grid" use-slot dot>
        <text class="title">勋章</text>
        <text class="value">3</text>
      </van-grid-item>
    </van-grid>
  </view>
  <view class="my-order" style="padding-top: 0;padding-bottom: 0; ">
    <van-grid custom-class="my-grid" column-num="5" border="{{false}}">
      <navigator class="orderItem" url="/pages-pvm/orderList/orderList?status=1000">
        <van-grid-item class="control-grid" use-slot badge="99+">
          <image class="img" src="../../icons/mvp/voucher.png" />
          <text class="title">地址管理</text>
        </van-grid-item>
      </navigator>
      <navigator class="orderItem" url="/pages-pvm/orderList/orderList?status=1000">
        <van-grid-item class="control-grid" use-slot badge="99+">
          <image class="img" src="../../icons/mvp/phone.png" />
          <text class="title">会员中心</text>
        </van-grid-item>
      </navigator>
      <navigator class="orderItem" url="/pages-pvm/orderList/orderList?status=1000">
        <van-grid-item class="control-grid" use-slot badge="99+">
          <image class="img" src="../../icons/mvp/address.png" />
          <text class="title">联系客服</text>
        </van-grid-item>
      </navigator>
      <navigator class="orderItem" url="/pages-pvm/orderList/orderList?status=1000">
        <van-grid-item class="control-grid" use-slot badge="99+">
          <image class="img" src="../../icons/mvp/us.png" />
          <text class="title">使用帮助</text>
        </van-grid-item>
      </navigator>
      <navigator class="orderItem" url="/pages-pvm/orderList/orderList?status=1000">
        <van-grid-item class="control-grid" use-slot badge="99+">
          <image class="img" src="../../icons/mvp/us.png" />
          <text class="title">关于我们</text>
        </van-grid-item>
      </navigator>
    </van-grid>
  </view>
</view>