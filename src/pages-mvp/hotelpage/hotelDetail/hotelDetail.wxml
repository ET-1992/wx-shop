<view class="container">
  <view class="nav-box" wx:if="{{showTitle}}" style="height: {{navButtonHeight + 5 + navTop}}px;"/>
  <view class="nav" style="height:{{navButtonHeight + 10}}px; top:{{navTop - 5}}px; background: {{showTitle ? '#fff' : '' }}" >
    <view style="display: flex; align-items: flex-start;">
      <view class="back" style="background: {{showTitle ? '#fff' : '' }}"><van-icon name="arrow-left" /></view>
      <view wx:if="{{showTitle}}" style="margin-left: 5px; font-size: 12px">{{title}}</view>
    </view>
    <view class="back" style="margin-right: {{navWidth + 15}}px; background: {{showTitle ? '#fff' : '' }}"><van-icon name="like-o" /></view>
  </view>
  <view class="swiper">
    <swiper class='swiper-con' style="width: 100%; height: {{navButtonHeight + 5 + navTop + 130}}px;" autoplay>
      <block wx:for="{{swiperImage}}">
        <swiper-item>
          <view style="width: 100%; height: {{navButtonHeight + 5 + navTop + 130}}px;">
            <image src="{{item.thumbnail}}"></image>
          </view>
          <view class="swiper-total">1/20</view>
          <view class="comment">
            <view style="color: #f5c082; font-size: 20px; margin: 0 10px 0 5px;">{{ rateData > 4 ? '棒' : rateData > 3 ? '好' : '差'}}</view>
            <view>
              <van-rate size="16px" value="{{ rateData }}" allow-half void-icon="star" void-color="#eee" color="#dac9a7" bind:change="handleRate" />
              <view>11212评价 <van-icon name="arrow" /></view>
            </view>
          </view>
        </swiper-item>
      </block>
    </swiper>
  </view>
   <view class="card_address">
    <view class="title">{{title}}</view>
      <view class="desc">
        <text class="">经济型 | 2022年开业</text>
        <view style="font-size: 14px; color: #111">设施/详情
          <van-icon name="arrow" /></view>
      </view>
      <view class="address">
      <view class="address_detail">{{hotel_address}}</view>
        <view class="address-right">
          <view class="" style="text-align: center;" bind:tap="openMap">
            <view class="img-dt" ><van-icon name="location" /></view>
            <view>地图</view>
          </view>
          <view class="" style="margin-left: 30px;" bind:tap="handleCall">
            <view class="img-dt" ><van-icon name="phone" /></view>
            <view>电话</view>
          </view>
        </view>
      </view>
    </view>
  <view class="hotel">
    <view class="hotel-time" bind:tap="handleCalendar">
      <view>
        <text style="font-weight: 600">{{calendarDate[0]}}</text>
        <text class="time-title">{{weekTime[0]}}入住</text>
      </view>
      <view class="time-num">{{num_of_days}}晚</view>
      <view>
        <text style="font-weight: 600">{{calendarDate[1]}}</text>
        <text class="time-title">{{weekTime[1]}}离店</text>
      </view>
      <view><van-icon name="arrow" /></view>
    </view>
    <view wx:for="{{skus}}" wx:key="index" wx:for-index="index">
      <view class="hotel-order">
        <view class="hotel-order-img">
        </view>
        <view class="hotel-order-desc" bind:tap="onclick" data-item="{{index}}">
          <view class="hotel-order-icon"><van-icon name="arrow-up" size="10px" color="#b4b4b8"/></view>
          <view class="hotel-order-title">{{item.property_names}}</view>
          <view class="hotel-order-msg">
            <text class="hotel-order-detail"><text wx:for="{{item.facility}}" wx:for-item="facility" style="margin-right: 4px">{{facility.value}}</text></text>
            <text class="hotel-order-price">
              <text class="hotel-order-detail order-num">￥{{item.cost}}均价</text>￥<text class="order-price">{{item.price}}</text>起
            </text>
          </view>
        </view>
      </view>
      <view class="hotel-msg" wx:if="{{showHotelMsg === item}}">
        <view class="hotel-msg-left">
          <view>星会员价</view>
          <view class="msg-dsy">1倍积分 | 延迟退房 | 免费离店寄存</view>
          <view class="msg-desc">不含早餐</view>
          <view class="msg-desc">6月16日 18：00前可免费取消</view>
        </view>
        <view class="hotel-msg-right">
          <view class="msg-right-price">
            ￥<text class="msg-right-num">381</text>
            <view class="mes-right-ys">已省￥8</view>
          </view>
          <view class="msg-order">订</view>
        </view>
      </view>
    </view>
  </view>
  <view class="hotel">
    <view class="equipment-service">
      <view class="equip-ser-title">设备&服务</view>
      <view class="equip-ser-base" wx:for="{{facility}}" wx:key="item.title" wx:for-item="item">
        <view class="equip-ser-base-left">
          <view class="equip-ser-base-img"><image class='img' src="{{item.icon}}"/></view>
          <text style="font-weight: 600">{{item.title}}</text>
        </view>
        <view class="equip-ser-base-right">
          <view class="equip-ser-base-con" wx:for="{{item.options}}" wx:key="msgitem" wx:for-item="msgitem"><van-icon name="passed" style="margin-right: 4px"/>{{msgitem}}
          </view>
        </view>
      </view>
    </view>
  </view>
  <view class="hotel">
    <view class="equipment-service">
      <view class="hotel-comment">
        <view class="equip-ser-title">住客评价</view>
          <view>
            <van-rate size="16px" value="{{ rateData }}" allow-half void-icon="star" void-color="#eee" color="#dac9a7" bind:change="handleRate" />
            <text style="color: #dac9a7; font-size: 14px; margin: 0 10px 0 5px;">{{ rateData > 4 ? '棒' : rateData > 3 ? '好' : '差'}}</text>
          </view>
      </view>
      <view wx:for="{{hotelComment}}" wx:for-item="item">
        <view style="color: #6a6a6e; font-size: 14px;margin-bottom: 10px;">{{item.time}}入住的{{item.identity}}</view>
        <view>{{item.comment}}</view>
        <view class="line" />
      </view>
      <view class='all-comment'>全部评价</view>
    </view>
  </view>
  <view class="hotel">
    <view class="equipment-service">
      <view class="equip-ser-title">酒店特色</view>
      <view wx:for="{{content}}">
        <image src='{{item}}'></image>
        <view class="hotel-contant" style="display: none">
          <view class="hotel-contant-img"></view>
          <view class="hotel-contant-msg">
            <view class="hotel-contant-title">大方舍得放手的时代发gs粉丝分身乏术分身乏术分身乏术生的方法</view>
            <van-rate size="16px" value="{{ rateData }}" allow-half void-icon="star" void-color="#eee" color="#dac9a7" bind:change="handleRate" />
            <text style="color: #dac9a7; font-size: 14px; margin: 0 10px 0 5px;">{{ rateData > 4 ? '棒' : rateData > 3 ? '好' : '差'}}</text>
            <text style="color: #6a6a6e;font-size: 14px; ">1212条评价</text>
            <view class="hotel-address">距当前酒店111m</view>
            <text class="hotel-auth" style="margin-right: 4px;">华住会权益</text><text class="hotel-auth">免费停车</text>
            <view class="hotel-price">¥<text style="font-size: 16px;">1213</text>起</view>
          </view>
        </view>
        <view class="line"/> 
      </view>
    </view>
  </view>
  <van-calendar show="{{ showCalendar }}" type="range" bind:close="onClose" bind:confirm="onConfirm" show-confirm="{{ false }}" />
</view>