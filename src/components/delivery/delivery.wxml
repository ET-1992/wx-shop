<view class="container">
	<view wx:if="{{ !address.userName && !isOrderDetail }}" class="address" bindtap="onAddress">
		<van-icon name="add-square" size="{{ 15 }}" color="{{ themeColor.primaryColor }}"/>
		<view class="text">{{ templateTypeText[defineTypeGlobal].com_address.addAddress || '点此填写收件地址' }}</view>
	</view>

	<view class="wrapper" wx:if="{{ address.userName || address.receiver_name }}">
		<view class="address-top" bindtap="onAddress">
			<view class="left">收件地址</view>
			<view class="right" wx:if="{{ !isOrderDetail }}">
				<view class="text">修改</view>
				<van-icon name="arrow" color="#999999" size="10"/>
			</view>
		</view>
		<view class="address-info">
			<view class="address-section">
				<view class="address-title">姓名</view>
				<!-- 确认订单数据 -->
				<view class="address-userName" wx:if="{{ !isOrderDetail }}">{{ address.userName || '无' }}</view>
				<!-- 订单详情数据 -->
				<view class="address-userName" wx:if="{{ isOrderDetail }}">{{ address.receiver_name || '无' }}</view>
			</view>
			<view class="address-section address-second">
				<view class="address-title">手机号码</view>
				<!-- 确认订单数据 -->
				<view class="address-phone" wx:if="{{ !isOrderDetail }}">{{ address.telNumber || '无' }}</view>
				<!-- 订单详情数据 -->
				<view class="address-phone" wx:if="{{ isOrderDetail }}">{{ address.receiver_phone || '无' }}</view>
			</view>
			<view class="address-section address-bottom">
				<view class="address-title">地址</view>
				<block wx:if="{{ !selfAddress }}">
					<!-- 确认订单数据 -->
					<view class="address-detail" wx:if="{{ !isOrderDetail }}">{{address.provinceName}}{{address.cityName}}{{address.countyName}}{{address.detailInfo}}{{address.room || ''}}</view>
					<!-- 订单详情数据 -->
					<view class="address-detail" wx:if="{{ isOrderDetail }}">{{address.receiver_state}}{{address.receiver_city }}{{address.receiver_district}}{{address.receiver_address}}</view>
				</block>
				<view class="address-detail" wx:if="{{selfAddress}}">{{isOrderDetail ? address.receiver_address : address.detailInfo }}</view>
			</view>

			<!-- <view class="address-section receive-time">
				<view class="address-title">门店配送时间</view>
				<picker bindchange="bindPickerChange" value="{{ index }}" range="{{ homeDeliveryTimes }}" wx:if="{{ !isOrderDetail }}" class="picker">
					<view class="address-time">{{ homeDeliveryTimes[index] || '请先选择门店' }}</view>
				</picker>
				<view class="address-orderTime" wx:if="{{ isOrderDetail }}">{{ address.receiver_delivery_time || '无' }}</view>
			</view> -->

		</view>
	</view>
</view>
