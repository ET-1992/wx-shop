<view class="container" style="{{ isOrderDetail ? 'border:none' : ''}}">
  <button
    class="normalizeBt contactBt"
    wx:if="{{ isShowContact }}"
    open-type="contact"
    session-from='{"nickName":"{{user.nickname}}", "avatarUrl":"{{user.avatarurl}}", "from":"order", "orderId":"{{order.id}}"}'
  >
    <image class="contactIcon" src="/icons/contact.png"/>
    <text>联系客服</text>
  </button>
  <view
    class="statusBt refundBt {{ isIphoneX ? 'iphoneXTrick' : '' }}"
    bindtap="onRefund"
    wx:if="{{ isShowRefund }}"
  >申请退款</view>
  <button
    class="normalizeBt statusBt {{ isIphoneX ? 'iphoneXTrick' : '' }}"
    wx:if="{{ isShowService }}"
    open-type="contact"
    session-from='{"nickName":"{{user.nickname}}", "avatarUrl":"{{user.avatarurl}}", "from":"order", "orderId":"{{order.id}}"}'
  >申请售后</button>
  <button
    class="statusBt {{ isIphoneX ? 'iphoneXTrick' : '' }}"
    bindtap="onCloseOrder"
    wx:if="{{ statusCode === 1 }}"
  >取消订单</button>
 <button
    class="statusBt payBt {{ isIphoneX ? 'iphoneXTrick' : '' }}"
    bindgetuserinfo="bindGetUserInfo" open-type="getUserInfo"
    wx:if="{{ statusCode === 1 }}"
  >去支付</button>
  <!-- <navigator
    class="statusBt"
    url="/pages/logistics/logistics?orderNo={{orderNo}}"
    wx:if="{{ statusCode > 2 && statusCode < 4 }}"
  >查看物流</navigator> -->
  <view class="statusBt confirmBt" bindtap="onConfirmOrder" wx:if="{{ statusCode === 3 }}">确认收货</view>
  <view class="statusBt" bindtap="onComment" wx:if="{{ statusCode === 4 && flase }}">发表评价</view>
</view>

<myModal modal="{{modal}}" bindonCancel="onCancel" bindonConfirm="onConfirm"></myModal>
