<!-- 企业微信联系 -->
<view class="container">
	<van-popup show="{{ show }}" position="bottom" custom-style="height: 20%;" bind:close="onClose" custom-class="popup-content">
		<!-- 提示内容 -->
		<view class="box" wx:if="{{ showSuccess }}">
			<van-image width="60" height="60" src="{{ headurl }}" custom-class="box-img" />
			<view class="box-ctn">
				<view class="box-title">客服人员：{{ name }}</view>
				<view class="box-desc" wx:if="{{ hasFrend }}">客服人员已经是您的好友</view>
				<view class="box-desc" wx:else>邀请通知已发送至您的微信</view>
			</view>
		</view>
		<!-- 提示内容 -->
		<view class="box" wx:elif="{{ showFail }}">
			<icon class="box-img" type="warn" size="26"></icon>
			<view class="box-ctn">
				<view class="box-title">错误提示</view>
				<view class="box-desc">获取客服企业微信失败</view>
			</view>
		</view>
		<block wx:else>
			<!-- 联系名片 -->
			<cell bind:startmessage="startmessage" bind:completemessage="completemessage" 
				plugid='e3622600d6cbc2f170a15e9d91937df4'
			/>
		</block>
	</van-popup>
</view>
