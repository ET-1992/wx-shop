<view class="section orders">
	<view class="orderItems">
		<navigator class="orderItem" url="/pages/orderList/orderList?status=10">
			<view class="orderItemValue" wx:if="{{ order_counts['10'] }}">{{ order_counts['10'] }}</view>
			<image class="statusIcon" mode="aspectFit" src="/icons/ordersIcon/myGroup.svg" />
			<view class="statusText">我的拼团</view>
		</navigator>
		<navigator class="orderItem" url="/pages/bargainList/bargainList">
			<image class="statusIcon" src="/icons/ordersIcon/bargain.svg" />
			<view class="statusText">我的砍价</view>
		</navigator>
		<navigator class="orderItem" url="/pages/myFav/myFav">
			<image class="statusIcon" src="/icons/ordersIcon/myfav.svg" />
			<view class="statusText">我的收藏</view>
		</navigator>
		<navigator class="orderItem" bindtap="openShareModal">
			<image class="statusIcon" src="/icons/ordersIcon/shareStore.svg" />
			<view class="statusText">分享店铺</view>
		</navigator>
		<!-- <navigator class="orderItem" url="/pages/myCoupons/myCoupons">
			<image class="statusIcon" src="/icons/ordersIcon/coupon.svg" />
			<view class="statusText">优惠券</view>
		</navigator> -->
	</view>
</view>

<van-popup show="{{ show }}" position="bottom" bind:close="onClose">
     <view class="shareModalContent">
        <button class="shareBtn" open-type="share" data-share-methods="componentShare" data-share-image="{{ infosComponentData.share_image }}" data-share-title="{{ infosComponentData.share_title }}">
            <image src="/icons/shareFriendIcon.svg" mode="aspectFit"></image>
            <view>分享给好友</view>
        </button>
        <view class="shareBtn" bindtap="go" data-url="/pages/affiliate/affiliatePoster/affiliatePoster?postertype=2">
            <image src="/icons/sharePosterIcon.svg" mode="aspectFit"></image>
            <view>分享店铺海报</view>
        </view>
    </view>
    <image class="close" src="/icons/closeModal.png" mode="aspectFit" catchtap="closeShareModal" />
</van-popup>