<view class="leftItem">
    <image class="productImage" src="{{ product.thumbnail }}" mode="aspectFill"/>
    <view class="meta">
        <view class="top">
            <view class="title">{{ product.title }}</view>
            <view class="desc" wx:if="{{ product.excerpt }}">{{ product.excerpt }}</view>
        </view>
        <view class="bottom">
            <view class="single-price">单买价 {{ globalData.CURRENCY[globalData.currency] }}{{ product.price }}</view>
            <view class="foot">
                <view class="groupon-price">
                   <view class="text">拼团价</view>
                   <view class="price">{{ globalData.CURRENCY[globalData.currency] }}{{ product.groupon_price }}</view>
                </view>
                <view class="grouponLimit" style="color: {{ themeColor.primaryColor }}">{{ product.groupon_member_limit }}人团</view>
                <view class="groupBt" style="color:{{ themeColor.primaryColor }}; border-color:{{ themeColor.primaryColor }}">去开团</view>
            </view>
        </view>
    </view>
</view>