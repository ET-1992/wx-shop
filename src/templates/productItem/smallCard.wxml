<view class="productItemSmallCard">
  <image
    src="{{ product.thumbnail }}"
    class="productItemImage"
    mode="aspectFit"
  />
  <view class="productItemInfo">
    <view class="prodcutItemName">
      {{ product.title }}
    </view>
    <view class="productItemMeta">
      <block wx:if="{{ product.miaosha_enable && nowTS >= product.miaosha_start_timestamp && nowTS <= product.miaosha_end_timestamp  }}">
        <view class="productItemPrice"><text style="font-size:10px">{{ globalData.CURRENCY[globalData.currency] }}</text>{{ product.miaosha_price }}</view>
      </block>
      <block wx:elif="{{ product.groupon_enable }}">
        <view class="productItemPrice"><text style="font-size:10px">{{ globalData.CURRENCY[globalData.currency] }}</text>{{ product.groupon_price }}</view>
      </block>
      <block wx:else>
        <view class="productItemPrice"><text style="font-size:10px">{{ globalData.CURRENCY[globalData.currency] }}</text>{{ product.price }}</view>
      </block>
      <view class="productItemOriginPrice"
      >
        <text style="font-size:10px">{{ globalData.CURRENCY[globalData.currency] }}</text>{{ product.original_price }}
      </view>
      <view
        class="productItemSold"
        wx:if="{{ product.groupon_enable !== '1' && product.miaosha_enable !== '1' && !product.sales_hidden }}"
      >已售：{{ product.sales }}</view>
      <view class="tagWrapper">
        <view
          class="tag"
          wx:if="{{ product.groupon_enable || product.miaosha_enable }}"
        >
          {{ product.groupon_enable ? product.groupon_member_limit + '人团' : '限时购' }}
        </view>
      </view>
    </view>
  </view>
</view>
