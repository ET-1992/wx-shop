<template name="repoItem">
    <view class="repo-item-wrap" wx:for="{{ listData }}" wx:key="{{ index }}">
        <view class="repo-item">
            <view class="repo-left">
                <view wx:for="{{ REPO_STATUS }}" wx:for-item="statusItem">
                    <view class="repo-type" wx:if="{{ statusItem.value == item.type }}">
                        <text>{{ statusItem.name || '' }}</text>
                        <text wx:if="{{ item.status == 0 }}">（待确认）</text>
                    </view>
                </view>
                <text class="repo-time">{{ filter.getDateTime(item.time) }}</text>
            </view>
            <view class="repo-right" wx:for="{{ REPO_STATUS }}" wx:for-item="statusItem" 
                wx:if="{{ statusItem.value == item.type }}">
                <view class="{{ statusItem.income ? 'income' : '' }}">
                    <!-- 金额 -->   
                    <text>{{ item.amount || 0 }}</text>
                </view>
            </view>
        </view>
    </view>
</template>
<wxs module="filter" src="utils/wxs/timeTranslate.wxs" />