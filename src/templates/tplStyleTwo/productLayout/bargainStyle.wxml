<view class="leftItem bargainStyle">
    <image class="productImage" src="{{ product.thumbnail }}" mode="aspectFill" lazy-load="{{ true }}" />
    <view class="meta">
        <view class="top">
            <image class="icon" src="/icons/smileFace.png"></image>
            <view class="groupNumber">已砍{{ product.bargain_finished_count || 0 }}件</view>
        </view>
        <view class="title">{{ product.title }}</view>
        <view class="desc" wx:if="{{ product.excerpt }}">{{ product.excerpt }}</view>
        <view class="singleBuy">原价购买
            <text class="price">{{ globalData.CURRENCY[globalData.currency] }}{{ product.price }}</text>
        </view>
        <view class="grouponInfo">
            <view class="grouponLimit">底价</view>
            <view class="grouponPrice">
                <text class="activeBuy">{{ globalData.CURRENCY[globalData.currency] }}</text>
                <text class="nowPrice">{{ product.bargain_price }}</text>
            </view>
        </view>
    </view>
    <view class="grouponBtn">
        <form bindsubmit="submit" report-submit="true">
            <button class="groupBt" formType="submit" style="background-color: {{ themeColor.primaryColor }}">去砍价</button>
        </form>
    </view>
</view>