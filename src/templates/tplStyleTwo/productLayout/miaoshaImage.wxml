<view class="leftItem">
    <image class="productImage" src="{{ miaosha.thumbnail }}" mode="aspectFill"/>
    <view class="meta">
        <view class="title">{{ miaosha.title }}</view>
        <view class="desc" wx:if="{{ miaosha.excerpt }}">{{ miaosha.excerpt }}</view>
        <view class="status unstart" wx:if="{{ !hasStart }}">未开始</view>
        <view class="status" wx:if="{{ !hasEnd && hasStart }}">进行中</view>
        <view class="status over" wx:if="{{ hasEnd }}">已结束</view>
        <view class="miaoshaPrice">
            <view class="newPrice">
                <text class="yuan">{{ globalData.CURRENCY[globalData.currency] }}</text>
                <text class="price" wx:if="{{ miaosha.miaosha_enable }}">{{ miaosha.miaosha_price }}</text>
                <text class="price"  wx:if="{{ miaosha.seckill_enable }}">{{ miaosha.seckill_price }}</text>
            </view>
            <!-- 限时购价格 -->
            <view class="originalPrice" wx:if="{{ miaosha.miaosha_enable && miaosha.miaosha_price !== miaosha.original_price }}">
                <text>{{ globalData.CURRENCY[globalData.currency] }}{{ miaosha.original_price }}</text>
            </view>
            <!-- 秒杀价格 -->
            <view class="originalPrice" wx:if="{{ miaosha.seckill_enable && miaosha.seckill_enable !== miaosha.original_price }}">
                <text>{{ globalData.CURRENCY[globalData.currency] }}{{ miaosha.seckill_price }}</text>
            </view>
        </view>
    </view>
    <view class="grouponBtn">
        <form bindsubmit="submit" report-submit="true">
            <button class="groupBt" formType="submit" style="background-color: {{ themeColor.primaryColor }}">去抢购 ></button>
        </form>
    </view>
</view>