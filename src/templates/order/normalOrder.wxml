<view class="section">
  <navigator
    class="logistics"
    url="/pages/logistics/logistics?orderNo={{order.order_no}}"
    wx:if="{{ order.statusCode > 2 && order.statusCode < 5 && logistics.no}}"
  >
    <image class="truckIcon" src="/icons/truck.png"/>
    <view class="info">
      <view class="remark">{{ logistics.list[logistics.list.length - 1].remark }}</view>
      <view class="dateTime">{{ logistics.list[logistics.list.length - 1].datetime }}</view>
    </view>
    <image class="rightIcon" src="/icons/right.png"/>
  </navigator>

  <view class="address">
    <image class="addressIcon" src="/icons/address.png"/>
    <view class="addressInfo">
      <view>
          <text>收货人：{{ order.receiver_name }} </text>
          <text class="phone"> {{ order.receiver_phone }}</text>
      </view>
      <view>收货地址：{{ order.receiver_state + order.receiver_city + order.receiver_district + order.receiver_address }}</view>
    </view>
  </view>
</view>
<view class="itemList">
 <view
  class="item"
  wx:for="{{ order.items }}"
  wx:key="id"
  >
    <image
      src="{{ item.thumbnail }}"
      class="itemImage"
      mode="aspectFill"
    />
    <view class="itemInfo">
      <view class="left">
        <view class="itemName">{{ item.title }}</view>
        <view class="properties">{{ item.sku_property_names }}</view>
      </view>
      <view class="right">
        <view>
          <view class="price">￥{{ item.price }}</view>
          <view class="originalPrice">￥{{ item.original_price }}</view>
        </view>
        <view class="itemQuantity">x{{ item.quantity }}</view>
      </view>
    </view>
 </view>
</view>

<view class="section priceInfo">
  <view class="priceInfoItem">
    <view class="priceInoItemTitle">商品总价</view>
    <view class="priceInfoItemValue">￥{{ order.total_fee }}</view>
  </view>
  <view class="priceInfoItem">
    <view class="priceInoItemTitle">运费</view>
    <view class="priceInfoItemValue">￥{{ order.postage || 0 }}</view>
  </view>
  <view class="priceInfoItem">
    <view class="priceInoItemTitle">订单总价</view>
    <view class="priceInfoItemValue">￥{{ (order.total_fee - 0) + ((order.postage - 0) || 0) }}</view>
  </view>
  <view class="priceInfoItem" wx:if="{{ false }}">
    <view class="priceInoItemTitle">优惠券</view>
    <view class="priceInfoItemValue">-￥{{ order.discount_fee || 0 }}</view>
  </view>
  <view class="priceInfoItem priceTotal">
    <view class="priceInoItemTitle">实付款</view>
    <view class="priceInfoItemValue">￥{{ order.amount }}</view>
  </view>
</view>

<view class="section buyerMessage">
  <view class="buyerMessageContent">
    买家留言：{{ order.buyer_message }}
  </view>
</view>

<view class="section orderMeta">
  <view class="item">支付方式: 微信支付</view>
  <view class="item">订单编号: {{ order.order_no }}</view>
  <view
    class="item"
    wx:if="{{ order.time }}"
  >下单时间: {{ order.createDate }}</view>
  <view
    class="item"
    wx:if="{{ order.paytime }}"
  >付款时间: {{ order.payDate }}</view>
  <view
    class="item"
    wx:if="{{ order.consign_time }}"
  >发货时间: {{ order.consignDate }}</view>
  <view
    class="item"
    wx:if="{{ order.refund_time }}"
  >退款时间: {{ order.refundDate }}</view>
</view>

<navigator
  open-type="switchTab"
  url="/pages/home/home"
  class="viewProduct"
>浏览更多商品</navigator>

<view class="footer">
  <orderOperations
    statusCode="{{ order.statusCode }}"
    orderNo="{{ order.order_no }}"
    isShowContact="{{ true }}"
    bindconfirmOrder="onRelaodOrder"
    bindpayOrder="onRelaodOrder"
    bindcloseOrder="onRelaodOrder"
  />
</view>
