<view class="leftItem">
  <image class="productImage" src="{{ product.thumbnail }}" mode="aspectFill" lazy-load="{{ true }}" />
  <view class="meta">
    <view class="name">{{ product.title }}</view>
    <view class="pay">
      <view class="desc" style="width: 60%">{{ product.sku_property_names }}</view>
      <view class="num" style="font-weight: 600; color: black">{{product.date}}</view>
    </view>
    <view class="singleBuy">
      <!-- 支付： -->
      <text class="price">{{ globalData.CURRENCY[globalData.currency] }}{{ product.price }}</text>
      <text class="status">{{statusText || ''}}</text>
    </view>
