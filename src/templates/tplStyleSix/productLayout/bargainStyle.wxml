<view class="grouponStyle">
    <image class="productImage" src="{{ product.thumbnail }}" mode="aspectFill"/>
    <view class="meta">
        <view class="top">
            <view class="title">{{ product.title }}</view>
            <view class="desc" wx:if="{{ product.excerpt }}">{{ product.excerpt }}</view>
        </view>
        <view class="bottom">
            <view class="info">
                <view class="price">
                    <text class="group-price">{{ globalData.CURRENCY[globalData.currency] }}{{ product.bargain_price }}</text>
                    <text class="single-price">{{ globalData.CURRENCY[globalData.currency] }}{{ product.price }}</text>
                </view>
                <view class="count">已砍价{{ product.sales || 0 }}件</view>
            </view>
            <view class="buyBtn" style="background-color: {{ themeColor.primaryColor }}" >去砍价</view>
        </view>
    </view>
</view>