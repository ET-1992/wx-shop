<view class="leftItem">
    <image class="productImage" src="{{ product.thumbnail }}" />
    <view class="meta">
        <view class="top">
            <view class="name">{{ product.title }}</view>
            <view class="desc" wx:if="{{ product.excerpt }}">{{ product.excerpt }}</view>
        </view>
        <view class="center">
            <view class="grouponPrice">
                底价<text class="activeBuy">{{ globalData.CURRENCY[globalData.currency] }}</text><text class="nowPrice">{{ product.bargain_price }}</text>
            </view>
            <view class="singleBuy">
                原价<text class="price">{{ globalData.CURRENCY[globalData.currency] }}{{ product.price }}</text>
            </view>
        </view>
        <view class="footer">
            <view class="grouponLimit">已砍{{ product.sales || 0 }}件</view>
            <form bindsubmit="submit" report-submit="true">
                <button class="groupBt" formType="submit" style="background-color: {{ themeColor.primaryColor }}" >马上砍价</button>
            </form>
        </view>
    </view>
</view>